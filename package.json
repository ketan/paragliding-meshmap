    "@types/leaflet-groupedlayercontrol": "^0.6.4",
    "@types/leaflet.markercluster": "^1.5.4",
    "@types/lodash": "^4.17.6",
    "@types/luxon": "^3.4.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.2.0",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/response-time": "^2.3.8",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
