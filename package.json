{
  "name": "paragliding-meshmap",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build frontend/dist",
    "build": "yarn run clean && concurrently yarn:build:fe yarn:build:be && cp -rf frontend/dist build/public",
    "build:be": "npx rollup -c rollup.config.js",
    "build:fe": "cd frontend && tsc -b && vite build --mode=production",
    "start": "concurrently -P \"yarn:start:be -- {@}\" yarn:start:fe --",
    "start:be": "export NODE_ENV=development; nodemon --exec node --loader ts-node/esm --enable-source-maps src/index.ts --",
    "start:fe": "export NODE_ENV=development; cd frontend && vite dev",
    "mqtt": "export NODE_ENV=development; nodemon --exec node --loader ts-node/esm --enable-source-maps src/mqtt.ts --",
    "prod": "node index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "fmt": "yarn run format",
    "typeorm": "NODE_ENV=development typeorm-ts-node-esm -d src/config/data-source.ts",
    "migrate": "NODE_ENV=development  yarn run typeorm migration:run",
    "schema-to-ts": "bin/schema-to-ts",
    "docker:build": "docker build . --progress plain --tag paragliding-meshmap --build-arg GIT_SHA=$(git rev-parse --short HEAD) --tag ghcr.io/ketan/paragliding-meshmap:latest",
    "test": "c8 mocha",
    "test:watch": "nodemon --config nodemon.test.json --exec mocha",
    "precommit": "concurrently yarn:fmt yarn:lint yarn:build yarn:test"
  },
  "imports": {
    "#entity/*": "./src/entity/*.ts",
    "#migrations/*": "./src/migration/*.ts",
    "#mqtt/*": "./src/mqtt/*.ts",
    "#config/*": "./src/config/*.ts",
    "#helpers/*": "./src/helpers/*.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@rmp135/sql-ts": "^2.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@swc/core": "^1.6.13",
    "@tailwindcss/forms": "^0.5.7",
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.16",
    "@types/compression": "^1.7.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
